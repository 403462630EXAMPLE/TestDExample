<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_lockpattern"
    tools:context="haibison.android.lockpattern.LockPatternActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:background="@color/title_bar"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/tv_left"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="手势密码"
            android:textColor="@color/action_bar_text_color"
            android:textSize="@dimen/font_size_action_title" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_top_hint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lock_pattern_head_hint_color_regular"
                android:textSize="15sp"
                android:text="请绘制手势密码"/>

            <TextView
                android:id="@+id/tv_top_hint2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/lock_pattern_head_hint_color_regular"
                android:textSize="13sp"
                android:text="绘制解锁图案"/>
        </LinearLayout>

        <haibison.android.lockpattern.widget.LockPatternView
            android:id="@+id/lock_pattern_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:padding="10dp"
            app:pathWidth="3dp"
            app:successColor="#f6c053"
            app:regularColor="#cfcad7"
            app:errorColor="#ff4f4f"
            app:dotSize="22dp"
            app:circleRadius="36dp"/>

        <TextView
            android:id="@+id/tv_no_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/lock_pattern_head_hint_color_regular"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="暂不设置"/>

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lock_pattern_head_hint_color_regular"
            android:visibility="gone"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:text="忘记密码"/>

        <include layout="@layout/lock_pattern_progress_bar"/>
    </RelativeLayout>
</RelativeLayout>
