<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="充值"
        app:left_show="icon" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:background="@color/recharge_grey_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/me_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="真实姓名"
                        android:textColor="@color/me_font"
                        android:textSize="@dimen/font_size_fifteen" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_tiny"
                        android:text="--"
                        android:textColor="@color/recharge_light_gray"
                        android:textSize="@dimen/font_size_fifteen" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:background="@color/me_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号"
                        android:textColor="@color/me_font"
                        android:textSize="@dimen/font_size_fifteen" />

                    <TextView
                        android:id="@+id/idnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_tiny"
                        android:text="--"
                        android:textColor="@color/recharge_light_gray"
                        android:textSize="@dimen/font_size_fifteen" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:background="@color/me_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="银行卡号"
                        android:textColor="@color/me_font"
                        android:textSize="@dimen/font_size_fifteen" />

                    <TextView
                        android:id="@+id/cardnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_tiny"
                        android:text="--"
                        android:textColor="@color/recharge_light_gray"
                        android:textSize="@dimen/font_size_fifteen" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/me_divider" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/recharge_grey_bg"
                android:gravity="bottom"
                >

                <TextView
                    android:id="@+id/limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:paddingBottom="10dp"
                    android:text="每笔最高额度5.0万元，每日最高额度5.0万元"
                    android:textColor="@color/me_gray"
                    android:textSize="11dp" />
                <TextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手续费：0:00元"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:paddingBottom="14dp"
                    android:textColor="@color/me_yellow"
                    android:textSize="11dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/me_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:textColor="@color/me_font"
                    android:textSize="@dimen/font_size_fifteen" />

                <EditText
                    android:id="@+id/et_chargenum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height"
                    android:layout_marginLeft="@dimen/spacing_large"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:background="@null"
                    android:hint="请输入充值金额"
                    android:textSize="15dp"
                    android:numeric="decimal"
                    android:paddingLeft="@dimen/spacing_tiny"
                    android:textColor="@color/recharge_light_gray" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/me_divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/recharge_grey_bg"
                android:gravity="bottom"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:paddingBottom="10dp"
                    android:text="当前手机号码：--"
                    android:textColor="@color/me_font"
                    android:textSize="15dp" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/me_divider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColorHint="@color/me_text_hint_color"
                    android:textSize="@dimen/font_size_middle"
                    android:textColor="@color/me_black"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:hint="请输入短信验证码"/>

                <TextView
                    android:id="@+id/tv_get_code"
                    android:layout_width="116dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="40dp"
                    android:textColor="@drawable/text_color_get_code"
                    android:textSize="@dimen/font_size_fifteen"
                    android:gravity="center"
                    android:background="@drawable/bg_round_get_code"
                    android:text="立即获取"/>



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/me_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/recharge_grey_bg"
                android:orientation="vertical">




                <!--<TextView
                    android:id="@+id/poundage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:textSize="@dimen/font_size_fifteen"
                    android:textColor="@color/me_divider"
                    />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginTop="57dp"
                    android:text="温馨提示："
                    android:textStyle="bold"
                    android:textColor="@color/recharge_font_warn"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginRight="@dimen/spacing_normal"
                    android:layout_marginTop="14dp"
                    android:text="1.充值免手续费；\n2.请注意银行借记卡充值限制，充值限额依据各银行限额为准;\n3.如果充值金额没有及时到账，请联系客服热线：4009 620 400。\n\n\n\n\n"
                    android:textColor="@color/recharge_light_gray"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/title_bar"
        android:text="提交"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_fifteen" />

</RelativeLayout>