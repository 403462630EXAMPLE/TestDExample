<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_show="icon"
        app:left_text="返回"
        app:bar_title="理财"/>

    <ru.vang.progressswitcher.ProgressWidget
        android:id="@+id/progress_widget"
        android:layout_below="@id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:progressViewLayout="@layout/progress_switch_progress"
        app:emptyViewLayout="@layout/progress_switch_empty"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_buy">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/financial_white">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:textColor="@color/financial_dark_black"
                            android:textSize="@dimen/font_size_big"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="15dp"/>

                        <TextView
                            android:id="@+id/tv_surplus_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_black"
                            android:textSize="@dimen/font_size_twelve"
                            android:layout_alignLeft="@id/tv_name"
                            android:layout_marginTop="5dp"
                            android:layout_below="@id/tv_name"
                            android:text="当前剩余份额 -- 份"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/financial_white"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_black"
                                android:textSize="@dimen/font_size_small"
                                android:text="投资金额"/>

                            <TextView
                                android:id="@+id/tv_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_light_gray"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/font_size_small"
                                android:text="--"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="15dp"
                            android:background="@color/financial_line"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_black"
                                android:textSize="@dimen/font_size_small"
                                android:text="年利率"/>

                            <TextView
                                android:id="@+id/tv_year_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_light_gray"
                                android:textSize="@dimen/font_size_small"
                                android:layout_alignParentRight="true"
                                android:text="--"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="15dp"
                            android:background="@color/financial_line"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_black"
                                android:textSize="@dimen/font_size_small"
                                android:text="预期收益"/>

                            <TextView
                                android:id="@+id/tv_profit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_light_gray"
                                android:textSize="@dimen/font_size_small"
                                android:layout_alignParentRight="true"
                                android:text="--"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/financial_white">

                        <TextView
                            android:id="@+id/tv_investment_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_black"
                            android:textSize="@dimen/font_size_small"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="投资份额"/>

                        <TextView
                            android:id="@+id/tv_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/tv_investment_hint"
                            android:textColor="@color/financial_purple"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="充值"/>

                        <TextView
                            android:id="@+id/tv_enable_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/tv_recharge"
                            android:layout_marginRight="10dp"
                            android:layout_alignTop="@id/tv_recharge"
                            android:textColor="@color/financial_gray"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="可用余额 -- 元"/>

                        <cn.hdmoney.hdy.view.NumberSettingView
                            android:id="@+id/number_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_border_line_shape"
                            android:layout_below="@id/tv_investment_hint"
                            android:layout_marginTop="15dp"
                            app:number_min="0"
                            app:number_max="1000"
                            app:unit="1"
                            app:number_type="number"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/financial_white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_red_packet_container"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:background="@drawable/bg_navigation_tab_selector"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_black"
                                android:textSize="@dimen/font_size_small"
                                android:layout_centerVertical="true"
                                android:text="红包"/>

                            <ImageView
                                android:id="@+id/iv_arrow_right1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/ic_right"
                                android:layout_alignParentRight="true"/>

                            <TextView
                                android:id="@+id/tv_red_packet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_yellow"
                                android:textSize="@dimen/font_size_small"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@id/iv_arrow_right1"
                                android:layout_marginRight="10dp"
                                android:text="50元"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginLeft="15dp"
                            android:background="@color/financial_line"/>

                        <RelativeLayout
                            android:id="@+id/rl_add_rate_container"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:background="@drawable/bg_navigation_tab_selector"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_black"
                                android:textSize="@dimen/font_size_small"
                                android:layout_centerVertical="true"
                                android:text="加息卷"/>

                            <ImageView
                                android:id="@+id/iv_arrow_right2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/ic_right"
                                android:layout_alignParentRight="true"/>

                            <TextView
                                android:id="@+id/tv_add_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/financial_yellow"
                                android:textSize="@dimen/font_size_small"
                                android:layout_toLeftOf="@id/iv_arrow_right2"
                                android:layout_marginRight="10dp"
                                android:layout_centerVertical="true"
                                android:text="不使用"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/financial_white"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:focusableInTouchMode="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_password_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_black"
                            android:textSize="@dimen/font_size_small"
                            android:layout_centerVertical="true"
                            android:text="交易密码"/>

                        <cn.hdmoney.hdy.view.HdyEditText
                            android:id="@+id/et_trade_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/financial_light_gray"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="@dimen/font_size_small"
                            android:inputType="textPassword"
                            android:gravity="right|center_vertical"
                            android:text=""
                            android:hint="请输入交易密码"
                            android:background="@null"
                            android:layout_toRightOf="@id/tv_password_hint"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/check_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="9dp"
                            android:textColor="@color/financial_gray"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="我已阅读并同意《"/>

                        <TextView
                            android:id="@+id/tv_pledge_protocol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_blue"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="质押协议"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_gray"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="》与《"/>

                        <TextView
                            android:id="@+id/tv_delegate_protocol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_blue"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="委托协议"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/financial_gray"
                            android:textSize="@dimen/font_size_twelve"
                            android:text="》"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/tv_buy"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_purple_selector"
                android:textColor="@color/financial_white"
                android:textSize="@dimen/font_size_big"
                android:gravity="center"
                android:text="确定购买"/>
        </RelativeLayout>
    </ru.vang.progressswitcher.ProgressWidget>
</RelativeLayout>