<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_tab_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#f8f8f8"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/iv_index"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_tab_index_selector"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tab_text_color_selector"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/iv_quote"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_tab_quote_selector"
            android:gravity="center"
            android:text="行情"
            android:textColor="@drawable/tab_text_color_selector"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/iv_find"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_tab_find_selector"
            android:gravity="center"
            android:text="发现"
            android:textColor="@drawable/tab_text_color_selector"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/iv_me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_tab_me_selector"
            android:gravity="center"
            android:text="我"
            android:textColor="@drawable/tab_text_color_selector"
            android:textSize="10dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/rl_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_tab_container"/>

</RelativeLayout>
