<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/me_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="我的推荐"
        app:left_text="返回"
        app:right_text="推荐链接"
        app:right_show="text"
        app:left_show="icon"/>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_round_purple_shape"
        android:orientation="horizontal"
        android:padding="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_tab_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="好友推荐"
            android:textSize="@dimen/font_size_small"
            android:textColor="@drawable/tab_text_color_selector"
            android:background="@drawable/bg_left_round_tab_selector"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/me_purple"/>

        <TextView
            android:id="@+id/tv_tab_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="奖励明细"
            android:textSize="@dimen/font_size_small"
            android:textColor="@drawable/tab_text_color_selector"
            android:background="@drawable/bg_right_round_tab_selector"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/me_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>