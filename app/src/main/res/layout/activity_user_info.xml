<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_container"
    android:orientation="vertical"
    android:background="@color/default_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="个人信息"
        app:left_text="返回"
        app:left_show="icon"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="0.5dp"
        android:background="@color/me_line"/>

    <RelativeLayout
        android:id="@+id/rl_avatar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@drawable/bg_navigation_tab_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/me_black"
            android:textSize="@dimen/font_size_fifteen"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="头像"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toLeftOf="@+id/iv_right_icon1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_default_avator"/>

        <ImageView
            android:id="@+id/iv_right_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:background="@color/me_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_navigation_tab_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/me_black"
            android:textSize="@dimen/font_size_fifteen"
            android:layout_marginLeft="16dp"
            android:text="性别"/>

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right_icon2"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/me_light_gray"
            android:textSize="@dimen/font_size_middle"
            android:text="--"/>

        <ImageView
            android:id="@+id/iv_right_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:background="@color/me_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_navigation_tab_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/me_black"
            android:layout_centerVertical="true"
            android:textSize="@dimen/font_size_fifteen"
            android:layout_marginLeft="16dp"
            android:text="地区"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_right_icon3"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/me_light_gray"
            android:textSize="@dimen/font_size_fifteen"
            android:text="--"/>

        <ImageView
            android:id="@+id/iv_right_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:background="@color/me_line"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_address_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_navigation_tab_selector">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/me_black"
            android:textSize="@dimen/font_size_fifteen"
            android:layout_marginLeft="16dp"
            android:text="详细地址"/>

        <ImageView
            android:id="@+id/iv_right_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_arrow_right"/>

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_right_icon4"
            android:layout_marginRight="10dp"
            android:textColor="@color/me_light_gray"
            android:textSize="@dimen/font_size_fifteen"
            android:text="--"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/me_line"/>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_round_white_selector"
        android:gravity="center"
        android:textColor="@color/me_purple"
        android:textSize="@dimen/font_size_big"
        android:text="退出登录"/>
</LinearLayout>