<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">
    <cn.hdmoney.hdy.guide.banner.SimpleImageBanner
        android:id="@+id/banner_invest"
        android:layout_width="fill_parent"
        android:layout_height="198dp"
        banner:bb_scale="0.5625"/>
    <!--banner:bb_indicatorCornerRadius="0dp"-->
    <!--banner:bb_indicatorHeight="4dp"-->
    <!--banner:bb_indicatorWidth="10dp"-->
    <GridView
        android:id="@+id/gv_home_program"
        style="@style/ListSelectorBorderless"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center_vertical"
        android:numColumns="4" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_gravity="center_vertical"
        android:background="@color/gray_lighter"
        >
        <View
            android:id="@+id/view1"
            android:layout_width="148dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@color/divider_normal"
            />
        <TextView
            android:id="@+id/tv_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginRight="@dimen/spacing_small"
            android:layout_toRightOf="@id/view1"
            android:text="产品推荐"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/font_size_eleven"/>
        <View

            android:layout_width="148dp"
            android:layout_height="1dp"
            android:layout_toRightOf="@id/tv_tuijian"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:background="@color/divider_normal"
            />
    </RelativeLayout>
