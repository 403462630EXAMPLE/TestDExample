<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/me_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="登录密码"
        app:left_show="icon"
        app:left_text="返回"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/font_size_fifteen"
            android:textColor="@color/me_black"
            android:textColorHint="@color/me_text_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@color/me_white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="请输入旧密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/me_line"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="@dimen/font_size_fifteen"
            android:textColor="@color/me_black"
            android:textColorHint="@color/me_text_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@color/me_white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="请输入新密码"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/me_line"/>

        <EditText
            android:id="@+id/et_password_again"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="@dimen/font_size_fifteen"
            android:textColor="@color/me_black"
            android:textColorHint="@color/me_text_hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@color/me_white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:layout_weight="1"
            android:hint="请确认新密码"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_ten"
            android:textColor="#999999"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="6~20位字符，至少包含数字、大写字母、小写字母、符号中的2种"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/bg_round_purple_selector"
        android:gravity="center"
        android:textColor="@color/me_white"
        android:textSize="@dimen/font_size_big"
        android:text="确定"/>
</LinearLayout>