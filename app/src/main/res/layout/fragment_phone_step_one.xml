<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/me_bg_color">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="手机号码"
        app:left_show="icon"
        app:left_text="返回"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@color/me_white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_fifteen"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:textColor="@color/me_black"
            android:text="手机号"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_normal"
            android:textSize="@dimen/font_size_fifteen"
            android:textColor="@color/me_gray"
            android:text="--"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_update_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="18dp"
        android:background="@drawable/bg_round_purple_selector"
        android:gravity="center"
        android:textColor="@color/me_white"
        android:textSize="@dimen/font_size_big"
        android:text="更绑手机号码"/>
</LinearLayout>