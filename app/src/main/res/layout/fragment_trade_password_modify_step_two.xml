<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.hdmoney.hdy.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_title="修改交易密码"
        app:left_show="icon"
        app:left_text="返回"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/me_white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="vertical"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_old_trade_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/me_text_hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/font_size_fifteen"
                android:textColor="@color/me_black"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="请输入旧交易密码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/me_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="vertical"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_new_trade_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/me_text_hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/font_size_fifteen"
                android:textColor="@color/me_black"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="请输入交易密码"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/me_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:orientation="vertical"
            android:background="@color/white">

            <EditText
                android:id="@+id/et_trade_password_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/me_text_hint_color"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/font_size_fifteen"
                android:textColor="@color/me_black"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:hint="请确认交易密码"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_round_purple_selector"
        android:gravity="center"
        android:textColor="@color/me_white"
        android:textSize="@dimen/font_size_big"
        android:text="确定"/>
</LinearLayout>