<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_lighter"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@drawable/bg_listviewitem_corner"
        android:padding="@dimen/spacing_small">
        <RelativeLayout
            android:id="@+id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_dark"

                android:textSize="@dimen/font_size_small"
                android:text="稳利银21期"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/icon_addrate"
                    android:layout_width="45dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/addprofit" />

                <ImageView
                    android:id="@+id/icon_new"
                    android:layout_width="48dp"
                    android:layout_height="17dp"
                    android:paddingLeft="3dp"
                    android:src="@mipmap/newshare" />
            </LinearLayout>
        </RelativeLayout>


        <View
            android:id="@+id/divider"
            android:layout_below="@id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_six"
            android:background="@color/divider_normal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider">
        <LinearLayout
            android:id="@+id/ll_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/financial_yellow"
                    android:textStyle="bold"
                    android:textSize="@dimen/spacing_thirty"
                    android:text="9.0"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/financial_yellow"
                    android:textSize="@dimen/spacing_normal"
                    android:visibility="gone"
                    android:text="+"
                    />
                <TextView
                    android:id="@+id/tv_addrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/financial_yellow"
                    android:textSize="@dimen/font_size_fifteen"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="0.5"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_middle"
                android:textSize="@dimen/font_size_ten"
                android:layout_marginTop="5dp"
                android:text="年利率(%)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@id/ll_rate"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_middle"
                android:textSize="@dimen/font_size_fifteen"
                android:textStyle="bold"
                android:text="156"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_middle"
                android:textSize="@dimen/font_size_ten"
                android:layout_marginTop="9dp"
                android:text="期限(天)"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LL_progress"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@id/ll_time"
            android:layout_alignParentRight="true"
            >
           <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_middle"
                    android:textSize="@dimen/font_size_ten"
                    android:text="剩余"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_middle"
                    android:textSize="@dimen/font_size_fifteen"
                    android:textStyle="bold"
                    android:text="794"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_middle"
                    android:textSize="@dimen/font_size_ten"
                    android:text="份"/>
            </LinearLayout>
            <cn.hdmoney.hdy.view.HdyProgressView
                android:id="@+id/progressBar"
                android:layout_width="110dp"
                android:layout_height="8dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="12dp"
                app:hdy_progress="50"
                app:hdy_progressColor="@color/financial_yellow"
                app:hdy_spotWidth="1.5dp" />

        </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>