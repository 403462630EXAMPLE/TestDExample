<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:layout_centerVertical="true"
            android:textColor="@color/me_black"
            android:textSize="@dimen/font_size_thirteen"
            android:text="稳利银22期"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_gray"
                android:textSize="@dimen/font_size_twelve"
                android:text="投资金额"/>

            <TextView
                android:id="@+id/tv_investment_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_black"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/font_size_thirteen"
                android:text="¥5000.00"/>

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_light_gray"
                android:textSize="@dimen/font_size_eleven"
                android:layout_marginTop="3dp"
                android:text="起息日:  2015/12/31"
                android:layout_marginRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_gray"
                android:textSize="@dimen/font_size_twelve"
                android:text="预期收益"/>

            <TextView
                android:id="@+id/tv_profit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_black"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:text="¥300.00"/>

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/me_light_gray"
                android:textSize="@dimen/font_size_eleven"
                android:layout_marginTop="3dp"
                android:text="到期日:  2016/1/31"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:background="@color/me_line"/>
</LinearLayout>