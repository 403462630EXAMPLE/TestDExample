<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/me_white"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_left_container"
        android:layout_width="103dp"
        android:layout_height="64dp"
        android:background="@mipmap/bg_coupon_enable"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/me_white"
            android:text="1.0"/>

        <TextView
            android:id="@+id/tv_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:layout_marginTop="-2dp"
            android:textColor="@color/me_white"
            android:text="投资抵用卷"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/me_gray"
            android:textSize="@dimen/font_size_twelve"
            android:layout_alignParentTop="true"
            android:text="--"/>

        <TextView
            android:id="@+id/tv_enable_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_eleven"
            android:layout_marginTop="2dp"
            android:text="--"/>

        <TextView
            android:id="@+id/tv_expire_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_eleven"
            android:layout_marginTop="2dp"
            android:text="--"/>
    </LinearLayout>
</LinearLayout>