<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_title_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/title_bar"
    android:orientation="horizontal">



    <LinearLayout
        android:id="@+id/layout_custom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/action_bar_text_color"
            android:textSize="@dimen/font_size_action_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="@dimen/action_btn_height"
            android:layout_height="@dimen/action_btn_height"
            android:src="@drawable/ic_back_selector"
            android:scaleType="center"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/action_bar_head"
            android:layout_height="@dimen/action_bar_head"
            android:layout_marginLeft="@dimen/spacing_tiny"
            android:src="@mipmap/countset_img"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/action_bar_text_color"
            android:textSize="@dimen/font_size_left_action"
            android:gravity="center"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:visibility="gone"
            android:text="返回"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_btn_height"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:gravity="center"
            android:minWidth="@dimen/action_btn_height"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="注册"
            android:textColor="@drawable/action_bar_text_color_selector"
            android:textSize="@dimen/font_size_fifteen"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/action_btn_height"
            android:layout_height="@dimen/action_btn_height"
            android:scaleType="center"
            android:src="@mipmap/ic_action_more"
            android:visibility="gone" />
    </LinearLayout>

</FrameLayout>