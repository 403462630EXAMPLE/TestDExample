<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ListSelectorBorderless">
        <item name="android:listSelector">@drawable/item_common_bg</item>
    </style>
    <style name="ListSelectorBorderless2">
        <item name="android:listSelector">@drawable/item_common_bg2</item>
    </style>
    <!-- 加载对话框，样式 -->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@mipmap/splashpic</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="GuideTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="NoSwipTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="FinancialBuySuccessTextStyle">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/financial_black</item>
    </style>
    <style name="RechargeSuccessTextStyle">
        <item name="android:textSize">@dimen/font_size_middle</item>
        <item name="android:textColor">@color/recharge_font_green</item>
    </style>

    <style name="listPopWindowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/top_to_bottom</item>
    </style>
    <style name="FinancialChoosePopWindowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/financial_top_to_bottom</item>
        <item name="android:windowExitAnimation">@anim/financial_bottom_to_top</item>
    </style>
    <style name="gonggao" >
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
